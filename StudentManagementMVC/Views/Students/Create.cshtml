@model StudentManagementMVC.Models.Student
@{
    ViewData["Title"] = "Add Student";
}

<div class="container">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h4 mb-0 text-primary">
            <i class="bi bi-person-plus-fill me-2"></i>Add Student
        </h1>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i> Back to List
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <strong>Student Details</strong>
        </div>
        <div class="card-body">
            
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

            <form asp-action="Create" method="post" class="row g-3">
                @Html.AntiForgeryToken()

                <div class="col-md-6">
                    <label asp-for="FirstName" class="form-label">First Name <span class="text-danger">*</span></label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-person"></i></span>
                        <input asp-for="FirstName" class="form-control" placeholder="e.g., Ayesha" />
                    </div>
                    <span asp-validation-for="FirstName" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="LastName" class="form-label">Last Name <span class="text-danger">*</span></label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-person"></i></span>
                        <input asp-for="LastName" class="form-control" placeholder="e.g., Rahman" />
                    </div>
                    <span asp-validation-for="LastName" class="text-danger small"></span>
                </div>

                <div class="col-md-8">
                    <label asp-for="Email" class="form-label">Email <span class="text-danger">*</span></label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                        <input asp-for="Email" class="form-control" placeholder="name@example.com" />
                    </div>
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <div class="col-md-4">
                    <label asp-for="Age" class="form-label">Age <span class="text-danger">*</span></label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-123"></i></span>
                        <input asp-for="Age" class="form-control" min="1" max="150" />
                    </div>
                    <span asp-validation-for="Age" class="text-danger small"></span>
                </div>

                <div class="col-12 d-flex justify-content-end gap-2 pt-2">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-x-circle me-1"></i> Cancel
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check2-circle me-1"></i> Save
                    </button>
                </div>
            </form>
        </div>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
