@model StudentManagementMVC.Models.Student
@{
    ViewData["Title"] = "Edit Student";
}

<div class="container mt-4 d-flex justify-content-center">
    <div class="card shadow-sm border-0" style="max-width: 600px; width: 100%;">
        <div class="card-header bg-primary text-white text-center">
            <h4 class="mb-0">Edit Student</h4>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post" class="text-center" novalidate>
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />

                <div class="mb-3 row align-items-center">
                    <label asp-for="FirstName" class="col-sm-4 col-form-label fw-semibold text-sm-end"></label>
                    <div class="col-sm-8">
                        <input asp-for="FirstName" class="form-control form-control-sm" placeholder="Enter first name" />
                        <span asp-validation-for="FirstName" class="text-danger small"></span>
                    </div>
                </div>

                <div class="mb-3 row align-items-center">
                    <label asp-for="LastName" class="col-sm-4 col-form-label fw-semibold text-sm-end"></label>
                    <div class="col-sm-8">
                        <input asp-for="LastName" class="form-control form-control-sm" placeholder="Enter last name" />
                        <span asp-validation-for="LastName" class="text-danger small"></span>
                    </div>
                </div>

                <div class="mb-3 row align-items-center">
                    <label asp-for="Email" class="col-sm-4 col-form-label fw-semibold text-sm-end"></label>
                    <div class="col-sm-8">
                        <input asp-for="Email" type="email" class="form-control form-control-sm" placeholder="Enter email" />
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>
                </div>

                <div class="mb-3 row align-items-center">
                    <label asp-for="Age" class="col-sm-4 col-form-label fw-semibold text-sm-end"></label>
                    <div class="col-sm-4">
                        <input asp-for="Age" type="number" min="1" class="form-control form-control-sm" placeholder="Age" />
                        <span asp-validation-for="Age" class="text-danger small"></span>
                    </div>
                </div>

                <div class="d-flex justify-content-center gap-2">
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-save"></i> Update
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-x-circle"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
